@model CarShopping.Web.Models.CarModel

@{
    ViewData["Title"] = "Visualizar Veículo";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            padding: 20px;
        }

        .back-to-list {
            margin-top: 20px;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .center-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Visualizar Veículo</h1>
        <div class="center-content">
            <hr />
            <dl>
                <dt>Marca:</dt>
                <dd>@Html.DisplayFor(model => model.Brand)</dd>
                <dt>Modelo: </dt> <dd>@Html.DisplayFor(model => model.Name)</dd>
                
                <dt>Descrição:</dt>
                <dd>@Html.DisplayFor(model => model.Description)</dd>
                <dt>Quilometragem:</dt>
                <dd>@Html.DisplayFor(model => model.Mileage)</dd>
                <dt>Ano do Carro:</dt>
                <dd>@Model.FabricationDate.ToString("yyyy")</dd>
                <dt>Valor de Venda:</dt>
                <dd>@Model.SellingValue.ToString("c")</dd>
                <dt>Já foi vendido?</dt>
                <dd>@Html.DisplayFor(model => model.IsSold)</dd>
                <dt>Está disponível?</dt>
                <dd>@Html.DisplayFor(model => model.IsAvaliable)</dd>
            </dl>
            <div>
                <a asp-action="CarIndex" class="btn btn-success">
                    <i class="fas fa-arrow-left"></i> Voltar para a Lista
                </a>
                <a asp-action="UpdateCar" class="btn btn-warning" asp-route-id="@Model.Id">
                    <i class="fas fa-edit"></i> Editar Veículo
                </a>
            </div>
        </div>
    </div>
</body>
</html>
